<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Surah Reference -->
    <TextView
        android:id="@+id/widget_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_reference"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:alpha="0.9"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Arabic Text -->
    <TextView
        android:id="@+id/widget_arabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_arabic_text"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingMultiplier="1.8"
        android:paddingVertical="12dp"
        android:textDirection="rtl" />

    <!-- Translation -->
    <TextView
        android:id="@+id/widget_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_translation"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:alpha="0.95"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:paddingTop="8dp"
        android:maxLines="4"
        android:ellipsize="end" />

    <!-- App Name Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Ayah"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_marginTop="8dp" />
</LinearLayout>
